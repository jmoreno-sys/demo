@model IEnumerable<Web.Areas.Administracion.Models.InformacionViewModel>
@{
    ViewBag.Title = "Información  del sistema";
}

<section id="content">
    <div class="container-fluid px-xl-5 px-lg-5 px-md-1 px-sm-0">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb purple lighten-4">
                        <li class="breadcrumb-item"><a asp-area="Consultas" asp-controller="Principal" asp-action="Inicio">Inicio</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card-deck">
                @{
                    var submodels = Model.Where(m => !m.Dependencia);
                }
                @foreach (var item in submodels)
                {
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header" style="background-color:  @(item.Color) !important; color: white;">
                            @item.Nombre
                        </div>
                        <div class="card-body">
                            <small class="card-text">
                                @item.Descripcion<br />
                                Compilación: @item.Publicacion
                            </small>
                        </div>
                        <div class="card-footer" style="min-height: 58px;">
                            <div class="row">
                                <div class="col">
                                    <p class="card-text">
                                        <small class="text-muted">Versión: @item.Version</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card mb-4 shadow-sm">
                <div class="card-header" style="background-color: #6c757d !important; color: white;">
                    Dependencias
                </div>
                <div class="card-body">
                    @foreach (var item in Model.Where(m => m.Dependencia))
                    {
                        <div class="row">
                            <div class="col">
                                @item.Nombre
                            </div>
                            <div class="col text-right">
                                @item.Version.ToString()
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
